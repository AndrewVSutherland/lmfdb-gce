/etc/logrotate.d/mongodb:

/var/log/mongodb/*.log {
    daily
    rotate 30
    compress
    delaycompress
    #dateext
    missingok
    #notifempty
    sharedscripts
    copytruncate
    postrotate
        /bin/kill -SIGUSR1 `cat /var/lib/mongo/mongod.lock 2> /dev/null` 2> /dev/null || true
    endscript
}

/etc/mongodb.conf: add "logRotate: reopen" (needed when rotating from OS)

# where to write logging data.
systemLog:
  destination: file
  logAppend: true
  logRotate: reopen
  path: /var/log/mongodb/mongod.log

